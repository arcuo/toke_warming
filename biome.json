{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": [
            ".next"
        ],
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": {
                    "level": "off"
                }
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "error",
                    "options": {
                        "attributes": [
                            "classList"
                        ],
                        "functions": [
                            "clsx",
                            "cva",
                            "tw"
                        ]
                    }
                }
            },
            "suspicious": {
                "noExplicitAny": {
                    "level": "off"
                },
                "noArrayIndexKey": {
                    "level": "off"
                }
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}